<VirtualHost *:80>
    ServerName <%= $domain %>
    ServerAdmin admin@<%= $domain %>

    DocumentRoot /var/www/html/wordpress
    <Directory /var/www/html/wordpress>
      AllowOverride All
    </Directory>

    LogLevel info ssl:warn

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
